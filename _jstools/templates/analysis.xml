<?xml version="1.0"?>
<!DOCTYPE project [
<!ENTITY release "{{release}}">
<!ENTITY file_type "{{file_type}}">
<!ENTITY run_type "{{run_type}}">
<!ENTITY user "{{user}}">
<!ENTITY name "{{name}}">
]>

<job>
<project name="&name;">
  <numevents>-1</numevents>
  <os>SL7</os>
  <resource>DEDICATED,OPPORTUNISTIC,OFFSITE</resource>
  <larsoft>
    <tag>&release;</tag>
    <qual>e26:prof</qual>
    <local>/pnfs/uboone/resilient/users/{{user}}/tarballs/StrangenessCode.tar</local>
  </larsoft>
  <check>1</check>
  <copy>0</copy>
  <version>prod_&release;</version>

  <stage name="analyse">
    <inputdef>{{inputdef}}</inputdef>
    <fcl>{{fcl}}</fcl>
    <dirlevels>1</dirlevels>
    <dirsize>100</dirsize>
    <outdir>/pnfs/uboone/scratch/users/{{user}}/strangeness/&release;/&name;/out</outdir>
    <logdir>/pnfs/uboone/scratch/users/{{user}}/strangeness/&release;/&name;/log</logdir>
    <workdir>/pnfs/uboone/scratch/users/{{user}}/work/strangeness/&release;/&name;</workdir>
    <datatier>generated</datatier>
    <datafiletypes>root</datafiletypes>
    <prestart>1</prestart>
    <filelistdef>1</filelistdef>
    <maxfilesperjob>1</maxfilesperjob>
    <numjobs>{{numjobs}}</numjobs>
    <memory>4000</memory>
    <disk>20GB</disk>
    <maxfluxfilemb>0</maxfluxfilemb>
  </stage>

  <filetype>&file_type;</filetype>
  <runtype>&run_type;</runtype>
</project>
</job>